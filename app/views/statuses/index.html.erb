<div class="page-header">
    <h1>All Statuses</h1>
</div>

<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
    <div class="meta"><%= link_to "Show", status %></div>
    <span><%= link_to "Edit", edit_status_path(status) %></span> | 
        <span><%= link_to "Delete", status , method: :delete , data: { confirm: "Are you sure?"} %></span>
  </div>
<% end %>